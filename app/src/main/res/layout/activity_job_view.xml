<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".UI.JobViewActivity">

    <FrameLayout
        android:id="@+id/frag_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/job_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimaryDark" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/job_desc_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description"
                android:textSize="30sp" />

            <android.support.v4.widget.Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/job_loc_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="location"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/job_date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/job_start_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="start time"
                        android:textSize="24sp" />

                    <android.support.v4.widget.Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/job_end_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="end time"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TextView
                android:id="@+id/job_user_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/job_posted_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="date posted"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/see_comment_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_to_comment"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>

            <android.support.v4.widget.Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/confirm_button_jv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_for_job" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>